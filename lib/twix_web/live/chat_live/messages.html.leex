<div>
  <p class="flow-text blue-grey-text darken-4 center">
  	Messages
  </p>

  <div>
  <%= f = form_for @changeset,"#", id: "message-form", phx_change: "validate", phx_submit: "save" %>
  <div>
    <%= label f, :content %>
    <%= textarea f, :content, class:
    "materialize-textarea",  autofocus: true %>
    <%= error_tag f, :content %>
  </div>
  <div>
    <%= submit "Send", phx_disable_with: "Sending...", class: "btn blue-grey darken-4" %>
  </div>
  </div>

</div>
